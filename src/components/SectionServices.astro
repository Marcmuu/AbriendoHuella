    Servicies.map(({ title, description, img, price }, i) => (
      <div class="flex flex-col w-[90%] md:w-full md:min-h-96 mx-auto my-4 md:justify-between md:items-center ">
        <img src={img} class="w-full md:w-[26rem] h-60 rounded-xl" alt={"Foto " + title} />
        <h3 class="font-extrabold my-2 text-center">{title}</h3>
        <p class="text-[#467091] my-1 text-center">{price}</p>
        <p class="text-[#467091] my-1 text-center">{description}</p>
      </div>
    ))
  }
</div>
