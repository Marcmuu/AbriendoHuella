const Servicies = [
  {
    title: "Clase Grupal",
    description: "Sessión con grupo de máximo 4 personas.",
    img: "pexels-mati-mango-3193846.jpg",
    price: "50€/Hora x Persona",
  },
  {
    title: "Clase Privada",
    description: "Lecciones uno a uno para un aprendizaje más personalizado.",
    img: "pexels-bogdan-sameliuk-15572304.jpg",
    price: "50€/Hora",
  },
  {
    title: "Programa de Temporada",
    description:
      "Programa de esquí para toda la temporada con feedback del instructor.",
    img: "pexels-evgenia-kirpichnikova-1973293.jpg",
